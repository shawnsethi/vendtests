<table border="1">
  <tr>
    <th>Quantity Remaining</th>
	<th>Temperature</th>
	<th>Spin Start Time</th>
	<th>Spin End Time</th>
	<th>Drop Detected</th>
	<th>Vend Rating</th>
	<th>Condition of Product</th>
	<th>Notes</th>
	<th colspan="1"></th>
  </tr>
<%= render @test_case.test_results %>
</table>



